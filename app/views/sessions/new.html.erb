
<h1 class = "center">Log in</h1>
<div class ="row">
	<div class ="col col-md-6 col-md-offset-3">

		<%= form_for(:session, url: login_path) do |s| %>
      
      <%= s.label :email %>
      <%= s.text_field :email, class: 'form-control' %>

      <%= s.label :password %>
      <%= s.password_field :password, class: 'form-control' %>

      <%= s.label :remember_me, class: "checkbox inline" do %>
        <%= s.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

    	<%= s.submit "Login", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %>

  </div>
</div>