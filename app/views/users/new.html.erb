<h1>Form for new user registration</h1>
<p><%=map_count%></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= render 'shared/error_messages' %>
<%= form_for @user  do |user| %>
      <%= user.label :name %>
      <%= user.text_field :name, class: 'form-control' %>

      <%= user.label :email %>
      <%= user.text_field :email, class: 'form-control' %>

       <%= user.label :password %>
      <%= user.password_field :password, class: 'form-control' %>

      <%= user.label :password_confirmation, "Confirmation" %>
      <%= user.password_field :password_confirmation, class: 'form-control' %>

      <%= user.submit "enter", class: "btn btn-primary" %>




      <% end %>

    </div>
  </div>
